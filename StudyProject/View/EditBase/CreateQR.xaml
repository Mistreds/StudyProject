<Window x:Class="StudyProject.View.EditBase.CreateQR"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudyProject.View.EditBase" ResizeMode="NoResize"
        xmlns:wpf="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="CreateQR" Height="150" Width="300">
    <Grid>
        <StackPanel  Orientation="Horizontal"  HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center">
            <TextBox PreviewTextInput="GoodCountOnlyDigit" x:Name="GoodCount" wpf:HintAssist.Hint="Количество" wpf:HintAssist.HintOpacity="1"  wpf:HintAssist.IsFloating="True"  Height="35" FontSize="11" Width="100" Margin="10" ></TextBox>
            <Button  Height="35" Width="140" Margin="10" Content="Сформировать" Click="Button_Click"  ></Button>
        </StackPanel>
            
            
    </Grid>
</Window>
